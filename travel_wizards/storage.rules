rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read/write only their own receipts under users/{uid}/receipts/**
    match /users/{userId}/receipts/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other storage paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
