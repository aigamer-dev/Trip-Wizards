{
    "root": true,
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "max-len": [
            "error",
            {
                "code": 100,
                "ignoreTemplateLiterals": true,
                "ignoreUrls": true
            }
        ]
    }
}