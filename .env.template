# Travel Wizards Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# Firebase Configuration
# Get these values from your Firebase Console > Project Settings > General
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_AUTH_DOMAIN=your-firebase-project-id.firebaseapp.com

# Firebase Web Configuration
# From Firebase Console > Project Settings > General > Web apps
FIREBASE_WEB_API_KEY=your-web-api-key
FIREBASE_WEB_APP_ID=your-web-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Android Configuration  
# From Firebase Console > Project Settings > General > Android apps
FIREBASE_ANDROID_API_KEY=your-android-api-key
FIREBASE_ANDROID_APP_ID=your-android-app-id

# Google Maps API Configuration
# Get from Google Cloud Console > APIs & Services > Credentials
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_MAPS_WEB_API_KEY=your-google-maps-web-api-key

# Google Translate API Configuration
# Get from Google Cloud Console > APIs & Services > Credentials  
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Stripe Configuration (for payments)
# Get from Stripe Dashboard > Developers > API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Backend Configuration (if using custom backend)
BACKEND_BASE_URL=http://localhost:3000
API_BASE_URL=https://your-api-domain.com

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug

# Optional: External API Keys
WEATHER_API_KEY=your-weather-api-key
PLACES_API_KEY=your-places-api-key